<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#f1f1f1">

    <com.jingzz.jzwidget.widget.ShapeEditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_backgroundColor="@color/teal_700"
        app:shape_focused_backgroundColor="@color/purple_500"
        android:drawableLeft="@mipmap/img"
        app:shape_drawableLeft_height="24dp"
        app:shape_drawableLeft_width="24dp"
        android:paddingStart="16dp"
        android:drawablePadding="8dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.jingzz.jzwidget.widget.ShapeLinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:shape_backgroundColor="@color/purple_500"
        app:shape_radius="16dp"/>


    <com.jingzz.jzwidget.widget.ShapeView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:shape_isOver="true"
        app:shape_backgroundColor="@color/design_default_color_error"
        app:shape_strokeWidth="4dp"
        app:shape_strokeColor="@color/white"
        app:shape_topLeftRadius="8dp"
        app:shape_topRightRadius="16dp"
        app:shape_bottomLeftRadius="24dp"
        app:shape_shadowSize="8dp"
        app:shape_shadowColor="@color/teal_700"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#f1f1f1">

    <com.jingzz.shapeView.widget.ShapeLinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:shape_backgroundColor="@color/purple_500"
        app:shape_radius="16dp"
        app:shape_strokeWidth="2dp"
        app:shape_strokeColor="@color/white"
        app:shape_shadowSize="12dp"
        app:shape_shadowColor="@color/teal_700" />


    <com.jingzz.shapeView.widget.ShapeView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        app:shape_gradientColors="@array/rainbow_color"
        app:shape_gradientType="linear"
        app:shape_gradientRadius="50dp"
        app:shape_gradientOrientation="BL_TR"
        app:shape_gradientCenterX="0.1"
        app:shape_gradientCenterY="0.8"
        app:shape_strokeColor="@color/white"
        app:shape_strokeWidth="2dp"
        app:shape_topLeftRadius="8dp"
        app:shape_topRightRadius="16dp"
        app:shape_bottomLeftRadius="24dp"
        app:shape_shadowSize="8dp"
        app:shape_shadowColor="@color/black"/>

    <com.jingzz.shapeView.widget.ShapeEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_gradientColors="@array/rainbow_color"
        app:shape_gradientType="linear"
        app:shape_gradientOrientation="TL_BR"
        app:shape_focused_gradientColors="@array/rainbow_color2"
        app:shape_focused_gradientType="sweep"
        app:shape_strokeWidth="2dp"
        app:shape_strokeColor="@color/teal_700" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.jingzz.shapeView.widget.ShapeCheckedTextView
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:shape_gradientColors="@array/rainbow_color_str"
        app:shape_gradientOrientation="TL_BR"
        app:shape_checked_gradientColors="@array/rainbow_color_str"
        app:shape_checked_gradientType="radial"
        app:shape_checked_gradientRadius="300dp"
        android:checked="false"/>


    <com.jingzz.shapeView.widget.ShapeTextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="111111111"
        app:shape_backgroundColor="@color/teal_700"
        app:shape_unEnabled_gradientColors="@array/rainbow_color_str"
        android:enabled="false"
        app:shape_shadowSize="10dp"
        app:shape_shadowColor="@color/teal_700"
        app:shape_radius="8dp"
        app:shape_strokeColor="@color/white"
        app:shape_strokeWidth="10dp"/>


</LinearLayout>
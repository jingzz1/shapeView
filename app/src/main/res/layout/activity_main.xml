<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

    <com.jingzz.shapeView.widget.ShapeTextView
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:text="ShapeView"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:shape_backgroundColor="@color/orange"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:shape_radius="8dp"
        app:shape_rippleColor="#44000000" />


    <com.jingzz.shapeView.widget.ShapeImageView
        android:id="@+id/iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:shape_isOver="true"
        android:src="@mipmap/mv"
        android:scaleType="centerCrop"
        app:shape_shadowColor="@color/black"
        app:shape_shadowSize="8dp"
        app:shape_backgroundColor="@color/orange"
        app:shape_strokeWidth="10dp"
        app:shape_strokeColor="@color/orange"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
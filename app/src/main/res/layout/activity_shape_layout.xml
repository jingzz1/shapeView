<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShapeLayoutActivity">

    <com.jingzz.shapeView.widget.ShapeFrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:shape_shadowColor="@color/orange"
        app:shape_shadowSize="16dp"
        app:shape_backgroundColor="@color/white"
        app:shape_strokeColor="@color/orange"
        app:shape_strokeWidth="3dp"
        app:shape_radius="8dp"
        android:padding="19dp">

        <com.jingzz.shapeView.widget.ShapeTextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:shape_isOver="true"
            app:shape_backgroundColor="@color/orange"
            android:gravity="center"
            android:textSize="70dp"
            android:textColor="@color/white"
            android:text="A"/>

    </com.jingzz.shapeView.widget.ShapeFrameLayout>


    <com.jingzz.shapeView.widget.ShapeLinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:shape_shadowColor="@color/orange"
        app:shape_shadowSize="16dp"
        app:shape_gradientColors="@array/color2"
        app:shape_gradientOrientation="RIGHT_LEFT"
        app:shape_strokeColor="@color/orange"
        app:shape_strokeWidth="3dp"
        app:shape_radius="8dp"
        android:padding="19dp"
        android:gravity="center">

        <com.jingzz.shapeView.widget.ShapeImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:shape_isOver="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/mv"
            app:shape_strokeColor="@color/orange"
            app:shape_strokeWidth="2dp"/>

        <com.jingzz.shapeView.widget.ShapeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="随便写点什么"
            android:textColor="@color/white"
            app:shape_backgroundColor="@color/orange"
            app:shape_radius="14dp"
            android:layout_marginStart="24dp"/>

    </com.jingzz.shapeView.widget.ShapeLinearLayout>

</LinearLayout>